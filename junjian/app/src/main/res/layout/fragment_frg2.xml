<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frg2">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="   ▍ 每日看菌"
                android:textColor="#4E4444">
            </TextView>

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:iss_auto_cycle="true"
                app:iss_period="1000"
                app:iss_delay="0"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="   ▍ 每日资讯"
                android:textColor="#4E4444">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/zixun"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:text="世界十大致命毒蘑菇，全见过的人不多！"
                    android:textColor="@color/black"
                    android:textStyle="bold">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:src="@mipmap/pg1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:text="死亡帽 恶魔的雪茄 血齿菌 天蓝蘑菇 毒鹅膏 鹿花菌 死亡天使 荧光小菇 伞形毒菌 云芝">

                    </TextView>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="15dp"
                android:background="@drawable/zixun"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="云南一村民捡到一窝巨型野生菌：重达156公斤"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">



                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="80dp"
                        android:layout_margin="12dp"
                        android:src="@mipmap/pg2" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:text="近日在云南省玉溪市华宁县冲脉村，一村民发现了一窝156公斤的巨型野生菌。据报道，这">

                    </TextView>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="15dp"
                android:background="@drawable/zixun"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="云南人尝鲜见手青蘑菇能看到小精灵？这不好…"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:src="@mipmap/pg3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:text="最近云南人吃蘑菇的事又上热点了，微博、抖音、快手等平台都有云南人吃了野生菌之后">

                    </TextView>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="15dp"
                android:background="@drawable/zixun"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="天然美食紫色野生菌"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:src="@mipmap/pg4" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:text="野当云南连绵的阴雨悄悄退去，难得一见的阳光洒进了潮湿的青杠树林，青苔上闪动着">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


            </ScrollView>

</FrameLayout>